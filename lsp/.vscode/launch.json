{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/packages/lsp/out/**/*.js"],
      "preLaunchTask": "npm: watch",
      "cwd": "${workspaceFolder}/packages/lsp"
    }
  ]
}